<?xml version="1.0"?>
<ruleset name="Foodie coding standard">
    <description>Foodie coding standard</description>

    <!-- display progress and sniff -->
    <arg value="p"/>
    <arg value="s"/>

    <!-- use colors in output -->
    <arg name="colors"/>

    <!-- inherit rules from: -->
    <rule ref="PSR2"/>

    <!-- Paths and file to check -->
    <file>app</file>
    <file>bootstrap</file>
    <file>config</file>
    <file>database/factories</file>
    <file>public/index.php</file>
    <file>tests</file>

    <!-- exclude file -->
    <exclude-pattern>bootstrap/cache</exclude-pattern>
    <exclude-pattern>bootstrap/autoload.php</exclude-pattern>

</ruleset>
